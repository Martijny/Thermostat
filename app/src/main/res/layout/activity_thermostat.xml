<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="/res/com.devadvance.circulartest"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".ThermostatActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temperature"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="300dp">

        <nl.tue.demothermostat.circularseekbar.CircularSeekBar
            android:id="@+id/circularSeekBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/minus_button"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/temp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/bPlus"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/bPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/add_button"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/bMinus"
                android:layout_toEndOf="@+id/temp"
                android:layout_marginStart="33dp" />

            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>


    <Button
        android:id="@+id/sTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Set Temp" />

    <TextView
        android:id="@+id/dayTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="DayTemp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dDayTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="Display Day Temp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/nightTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="NightTemp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dNightTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="Display Night Temp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>