<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="/res/com.devadvance.circulartest"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b3b3ff"
    android:weightSum="1"
    tools:context=".ThermostatActivity">

    <Button
        android:id="@+id/addB"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/add_button"
        android:layout_alignTop="@+id/circularSeekBar1"
        android:layout_toEndOf="@+id/circularSeekBar1"
        android:layout_marginTop="119dp" />

    <nl.tue.demothermostat.circularseekbar.CircularSeekBar
        android:id="@+id/circularSeekBar1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/dayB"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/minusB"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:background="@drawable/minus_button"
        android:layout_alignTop="@+id/addB"
        android:layout_alignParentStart="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/homeB"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/thermometericonselected" />

        <Button
            android:id="@+id/weekB"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/homeB"
            android:background="@drawable/schedule_icon_unselected" />

    </RelativeLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dayB"
        android:background="@drawable/sun_icon"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/nightB"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/nightB"
        android:background="@drawable/moon_icon"
        android:layout_marginEnd="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/circularSeekBar1"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:id="@+id/temp"
        android:layout_alignBottom="@+id/minusB"
        android:layout_centerHorizontal="true" />

</RelativeLayout>