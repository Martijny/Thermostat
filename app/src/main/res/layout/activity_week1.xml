<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="org.thermostatapp.util.Week1"
    android:background="@android:color/background_light"
    android:weightSum="7">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:background="#ffffff">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/mondayB"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/tuesdayB"
        android:layout_toRightOf="@+id/mondayB"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/wednesdayB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tuesdayB"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/thursdayB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wednesdayB"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/fridayB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thursdayB"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/saturdayB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fridayB"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/button8"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/saturdayB"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"/>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Schedule"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Schedule"
        android:id="@+id/button10"
        android:layout_above="@+id/button9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
